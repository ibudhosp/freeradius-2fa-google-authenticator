# /etc/freeradius/3.0/sites-enabled/default

server default {

    listen {
        type = auth
        ipaddr = *
        port = 0
        limit {
            max_connections = 16
            lifetime = 0
            idle_timeout = 30
        }
    }

    listen {
        type = acct
        ipaddr = *
        port = 0
        limit {
            max_connections = 16
            lifetime = 0
            idle_timeout = 30
        }
    }

    authorize {
        filter_username
        preprocess
        files
        pam
    }

    authenticate {
        Auth-Type PAM {
            pam
        }
    }

    preacct {
        preprocess
        acct_unique
    }

    accounting {
        detail
        unix
    }

    session {
    }

    post-auth {
        Post-Auth-Type REJECT {
            attr_filter.access_reject
        }
    }
}
